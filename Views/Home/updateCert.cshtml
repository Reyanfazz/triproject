@model certificate.Models.updatecertModel

@{
    Layout = "_Layout2";
    ViewData["Title"] = "UpdateCert";
    
}

<h1>Update Certificate</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCert" method="Post" enctype="multipart/form-data"  >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SId" class="control-label">Student ID</label>
                <input asp-for="SId" class="form-control" />
                <span asp-validation-for="SId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SName" class="control-label">Name</label>
                <input asp-for="SName" class="form-control" />
                <span asp-validation-for="SName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scertificate" class="control-label">Upload Certificate</label>
                
                <input asp-for="Scertificate" class="form-control" required />
                
                <span asp-validation-for="Scertificate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
        <p>@ViewBag.Success</p>
        <p>@ViewBag.Error</p>
        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
